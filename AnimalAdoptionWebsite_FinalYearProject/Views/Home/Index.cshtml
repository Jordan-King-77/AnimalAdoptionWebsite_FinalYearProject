@model IEnumerable<AnimalAdoptionWebsite_FinalYearProject.Models.Animal>

@{
    ViewBag.Title = "Home Page";
}

<hr style="height:2px;border-width:0;color:#0094ff;background-color:grey" />
@foreach (var animal in Model)
{
    <div>
        <h3>@animal.Id</h3>
        <h3>@animal.Name</h3>
        <h4>@animal.Type</h4>
        <h4>@animal.Gender</h4>
        <h4>Date of Birth: @animal.DateOfBirth</h4>
        @if (animal.Rehomer != null)
        {
            <h4>Previous Owner: @animal.Rehomer.Email</h4>
        }
        else
        {
            <h4>Previous Owner: Unknown</h4>
        }

        <div>
            <h4>@(animal.Name)'s Description</h4>
            <div>@animal.Description</div>
            <div>@animal.Behaviour</div>
            <div>@animal.BackgroundInfo</div>
        </div>

        <div>
            <h4>@(animal.Name)'s Needs</h4>
            <div>@animal.HouseholdRequirements</div>
            <div>@animal.MedicalHistory</div>
            <div>@animal.DietaryNeeds</div>
        </div>

        <div>
            <h4>@(animal.Name)'s Tags</h4>
            <div>@animal.Tag1</div>
            <div>@animal.Tag2</div>
            <div>@animal.Tag3</div>
            <div>@animal.Tag4</div>
            <div>@animal.Tag5</div>
        </div>
    </div>
    <hr style="height:2px;border-width:0;color:#0094ff;background-color:grey" />
}

